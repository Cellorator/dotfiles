#!/bin/sh

# Runs programs only once
run() {
    if ! pgrep -f "$1" ;
    then
        "$@"&
    fi
}

run "picom -b"

run "/usr/lib/xfce-polkit/xfce-polkit"
run "dunst"
run "udiskie --tray"
run "blueman-applet"
run "nm-applet --no-agent"

run "gwe --hide-window"
run "easyeffects --gapplication-service"

disable-mouse-acceleration
set-key-repeat-rate
